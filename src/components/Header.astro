---
import Logo from "./Logo.astro";
import ResetButton from "./ResetButton";
---

<header>
  <a
    target="_blank"
    rel="noopener noreferrer nofollow"
    href="https://columba.app/"><Logo /></a
  >
  <ResetButton client:load />
</header>

<style>
  header {
    height: 88px;

    padding: 24px 16px;

    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  @media (min-width: 768px) {
    header {
      padding: 24px 60px;
    }
  }
</style>
